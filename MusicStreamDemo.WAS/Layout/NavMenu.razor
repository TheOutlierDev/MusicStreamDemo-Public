<header id="header" class="bg-purple-600 py-4 px-6 fixed w-full top-0 z-50">
    <div class="flex items-center justify-between">
        <!-- Brand Logo and Title -->
        <div class="flex items-center space-x-2">
            <i class="fa-solid fa-music text-white text-2xl"></i>
            <h1 class="text-white text-2xl font-bold">MusicStream</h1>
        </div>

        <!-- Navigation Menu Toggle Button -->
        <button title="Navigation menu" class="navbar-toggler focus:outline-none" @onclick="ToggleNavMenu">
            <i class="fa-solid fa-bars text-white text-2xl"></i>
        </button>
    </div>

    <!-- Collapsible Navigation Menu -->
    <div class="@NavMenuCssClass bg-purple-600 mt-2 px-6 py-4 rounded-md shadow-lg">
        <nav class="nav flex-col space-y-2">
            <a class="text-white flex items-center space-x-2 hover:text-purple-300 transition-colors duration-200" href="">
                <i class="fa-solid fa-house"></i>
                <span>Your Music</span>
            </a>
            <a class="text-white flex items-center space-x-2 hover:text-purple-300 transition-colors duration-200" href="/search">
                <i class="fa-solid fa-search"></i>
                <span>Search</span>
            </a>
            <a class="text-white flex items-center space-x-2 hover:text-purple-300 transition-colors duration-200" href="/profile">
                <i class="fa-regular fa-user"></i>
                <span>Profile</span>
            </a>
        </nav>
    </div>
</header>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "hidden" : "block";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}